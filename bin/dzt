#!/usr/bin/env ruby
require 'gli'
require 'dzt'

include GLI::App

program_desc 'Tile images into deep-zoom tiles'

default_command :slice

desc "Slice an image"
command :slice do |c|
  c.flag [:o, :output], desc: 'Output folder', default_value: File.join(Dir.pwd, "tiles")
  c.action do |global_options, options, args|
    if args.length < 1
      raise 'You must specify an image file to slice.'
    end
    storage = DZT::FileStorage.new(
      destination: options[:output]
    )
    tiler = DZT::Tiler.new(
      source: args[0],
      storage: storage
    )
    tiler.slice! do |path|
      puts path
    end
  end
end

exit run(ARGV)
